<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.photoeditor.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/editActivity"
        android:name="com.example.photoeditor.EditActivity"
        android:label="activity_edit"
        tools:layout="@layout/activity_edit" />
    <activity
        android:id="@+id/rotateActivity"
        android:name="com.example.photoeditor.RotateActivity"
        android:label="activity_rotate"
        tools:layout="@layout/activity_rotate" />
    <activity
        android:id="@+id/adjustmentActivity"
        android:name="com.example.photoeditor.AdjustmentActivity"
        android:label="activity_adjustment"
        tools:layout="@layout/activity_adjustment" />
</navigation>