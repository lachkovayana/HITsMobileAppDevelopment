<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RotateActivity">

    <LinearLayout
        android:id="@+id/rotationScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout style="@style/LayoutsStyle">


            <Button
                android:id="@+id/backButton"
                style="@style/MyButtonsStyle"
                android:layout_weight="1"
                android:text="@string/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/applyButton"
                style="@style/MyButtonsStyle"
                android:layout_weight="1"
                android:text="@string/apply" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/doubleRight"
                style="@style/MyButtonsStyle"
                android:layout_weight="1"
                android:text="@string/_180" />

            <Button
                android:id="@+id/right"
                style="@style/MyButtonsStyle"
                android:layout_weight="1"
                android:text="@string/_90" />

            <Button
                android:id="@+id/left"
                style="@style/MyButtonsStyle"
                android:layout_weight="1"
                android:text="@string/rotate90" />

            <Button
                android:id="@+id/doubleLeft"
                style="@style/MyButtonsStyle"
                android:layout_weight="1"
                android:text="@string/rotate180" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>